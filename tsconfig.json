{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es7", "dom", "es2015.promise"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@bitUI/*": ["bitUI/*"]
    }
  },
  "include": ["src"]
}
